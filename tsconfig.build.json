{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      // 構建專用設定
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "noEmit": false,
      "sourceMap": false,
      "removeComments": true,
      
      // 優化設定
      "importHelpers": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      
      // 確保生產構建品質
      "exactOptionalPropertyTypes": true,
      "noUncheckedIndexedAccess": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "coverage",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.stories.ts",
      "tests/**/*",
      "examples/**/*",
      "docs/**/*",
      "tools/**/*"
    ]
  }